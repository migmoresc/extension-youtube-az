{
    "manifest_version": 3,
    "name": "Extensi√≥n de YouTube",
    "version": "1.0",
    "permissions": [
        "activeTab",
        "scripting",
        "declarativeContent"
    ],
    "host_permissions": [
        "*://*.youtube.com/watch*"
    ],
    "background": {
        "service_worker": "scripts/service-worker.js"
    },
    "action": {
        "default_icon": {
            "16": "logo_16.png",
            "24": "logo_24.png",
            "32": "logo_32.png"
        }
    }
}